# Hermes TV — Environment Variables
# Copy to .env and fill in your keys

# ── API Keys (required for full pipeline) ──
OPENAI_API_KEY=
WEATHER_API_KEY=

# ── Admin UI auth ──
HERMES_API_KEY=changeme

# ── Paths (defaults work inside Docker) ──
HERMES_BASE_DIR=/opt/hermes
HERMES_DATA_DIR=/opt/hermes/data
HERMES_MODELS_DIR=/opt/hermes/models
HERMES_DB_PATH=/opt/hermes/data/hermes.db
HERMES_HLS_VIDEO_DIR=/tmp/hls_video

# ── FastAPI ──
HERMES_HOST=0.0.0.0
HERMES_PORT=8100

# ── Reverse proxy prefix (e.g. /hermestv for Tailscale Funnel) ──
HERMES_BASE_PATH=

# ── Piper TTS binary ──
PIPER_BIN=/usr/local/bin/piper
